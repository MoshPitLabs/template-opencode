{
	"permissions": {
		"allow": [
			"WebSearch",
			"Bash(ssh:*)",
			"Bash(git status)",
			"Bash(git diff:*)",
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"Bash(git push:*)",
			"Bash(git pull:*)",
			"Bash(git log:*)",
			"Bash(git checkout:*)",
			"Bash(git branch:*)",
			"Bash(git rev-parse --git-dir)",
			"Bash(gh pr:*)"
		],
		"deny": [
			"Read(./.env)",
			"Read(./.env.*)",
			"Read(./secrets/**)",
			"Read(./secrets.nix)",
			"Read(./config/credentials.json)",
			"Bash(rm -rf:*)",
			"Bash(sudo:*)"
		],
		"ask": []
	},
	"env": {
		"CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8000",
		"CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "0",
		"CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
		"DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
		"DISABLE_COST_WARNINGS": "1",
		"USE_BUILTIN_RIPGREP": "1",
		"CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
		"DISABLE_TELEMETRY": "1",
		"DISABLE_ERROR_REPORTING": "1",
		"DISABLE_BUG_COMMAND": "1",
		"DISABLE_AUTOUPDATER": "1"
	},
	"statusLine": {
		"type": "command",
		"command": "bash -c 'input=$(cat); MODEL=$(echo \"$input\" | jq -r \".model.display_name\"); DIR=$(echo \"$input\" | jq -r \".workspace.current_dir\"); BRANCH=\"\"; if git rev-parse --git-dir >/dev/null 2>&1; then BRANCH=\" | 🌿 $(git branch --show-current 2>/dev/null)\"; fi; echo \"[$MODEL] 📁 ${DIR##*/}$BRANCH\"'"
	}
}
