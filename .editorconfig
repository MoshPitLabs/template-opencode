root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.{png,jpg,gif,ico,pdf,gz,tar,zip,woff,woff2,ttf,eot}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
